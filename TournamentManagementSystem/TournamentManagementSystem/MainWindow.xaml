<Window x:Class="TournamentManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentManagementSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="10">
            <Label Margin="5" Content="Username" />
            <TextBox x:Name="txtUsername" Margin="5" BorderBrush="Blue" BorderThickness="1" Background="AliceBlue" Foreground="Black" Width="200"/>
            <Label Margin="5" Content="Password" />
            <PasswordBox x:Name="PassBox"  Margin="5" BorderBrush="Blue" BorderThickness="1" Background="AliceBlue" Foreground="Black" Width="200" />
            <Button Margin="10" Background="AliceBlue" Foreground="Black" Width="100" Height="20" Content="Submit" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
