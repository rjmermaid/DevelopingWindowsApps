<Window x:Class="PracticeExamTest.SearchStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeExamTest"
        mc:Ignorable="d"
        Title="SearchStudent" Height="450" Width="800">
    <Grid Background="DarkBlue">
        <DataGrid AutoGenerateColumns="True" Name="dataGridView1" HorizontalAlignment="Left" Height="117" Margin="162,117,0,0" VerticalAlignment="Top" Width="346">
        </DataGrid>
        <TextBox Name="txtFirstName"  HorizontalAlignment="Left" Height="23" Margin="162,277,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtLastName" HorizontalAlignment="Left" Height="23" Margin="162,305,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="FirstName" Foreground="White" HorizontalAlignment="Left" Margin="98,277,0,0" VerticalAlignment="Top"/>
        <Label Content="LastName" Foreground="White" HorizontalAlignment="Left" Margin="100,302,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" Name="btn_Search" HorizontalAlignment="Left" Margin="162,359,0,0" VerticalAlignment="Top" Width="75" Click="btn_Search_Click"/>

    </Grid>
</Window>
